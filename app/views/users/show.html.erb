    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <h1><%= @user.username %></h1>
                <ul><li>Score: <%= @user.score %></li><li>Registered since <%= @user.created_at.strftime("%b. %Y") %></li></ul>
            </div>
            <div class="col-sm-6">
            	<h2>Your achievements</h2>
                    <% @achievements.each do |achievement| %>
                    <img class="img-circle img-responsive badges" src="<%= achievement.image %>" alt="<%= achievement.name %>">
                    <% end %>
            </div>
            <!-- /.row -->
    </div>